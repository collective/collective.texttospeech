<?xml version="1.0"?>
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="plone">
  <records interface="collective.texttospeech.interfaces.ITextToSpeechControlPanel" />

  <!-- PLONE 5 BUNDLES - ready to use
    The compiled bundle file is empty - they are automatically generated/cooked by Plone.
  -->
  <records prefix="plone.bundles/texttospeech" interface="Products.CMFPlone.interfaces.IBundleRegistry"
      condition="have plone-5">
    <value key="last_compilation"></value>
    <value key="jscompilation">++plone++collective.texttospeech/bundle-texttospeech-compiled.min.js</value>
    <value key="merge_with">default</value>
    <value key="depends"></value>
    <value key="compile">False</value>
    <value key="enabled">True</value>
    <value key="resources">
      <element>responsivevoice</element>
      <element>texttospeech</element>
    </value>
  </records>

  <!-- PLONE 5 RESOURCES - to depend on from other modules. -->
  <records prefix="plone.resources/texttospeech" interface="Products.CMFPlone.interfaces.IResourceRegistry"
      condition="have plone-5">
      <value key="js">++plone++collective.texttospeech/main.js</value>
      <value key="url">++plone++collective.texttospeech</value>
  </records>
  <records prefix="plone.resources/responsivevoice" interface='Products.CMFPlone.interfaces.IResourceRegistry'
      condition="have plone-5">
      <value key="js">//code.responsivevoice.org/1.4/responsivevoice.js</value>
  </records>
</registry>
